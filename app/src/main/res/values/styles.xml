<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPointBlue</item>
    </style>

    <style name="ResearchNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">#66000000</item>
        <item name="fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ResearchProgressbarTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <color name="grapefruit">#ff6258</color>
    <color name="dodger_blue">#358fff</color>
    <color name="very_light_pink">#c3c3c3</color>

    <style name="RegisterIngredientTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

</resources>