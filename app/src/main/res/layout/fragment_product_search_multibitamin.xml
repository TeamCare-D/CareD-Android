<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@color/colorDuckEggBlue">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-2dp"
                android:text="종합 비타민"
                android:textColor="@color/colorPointBlue"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_fragment_product_search_multibitamin_title2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-2dp"
                android:text="을 고르셨네요?"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_fragment_product_search_multibitamin_title1"
                app:layout_constraintTop_toTopOf="@+id/txt_fragment_product_search_multibitamin_title1" />

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="8dp"
                android:text="마그네슘은 대표적으로 근육의 이완작용을 도우며,\n
한국의 60%가 모자란 영양소입니다. \n
칼슘과 상승작용하며 흡수되는 영양소입니다.\n
스트레스, 우울증, 근육 활동이 많은 사람에게 좋습니다."
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_multibitamin_title2" />

            <ImageView
                android:id="@+id/bar_fragment_product_search_multibitamin"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorPointBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_multibitamin_content" />

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_standard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="2dp"
                android:text="케디의 기준"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bar_fragment_product_search_multibitamin" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_fragment_product_search_multibitamin_standard_item1"
                android:layout_width="98dp"
                android:layout_height="118dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorWhite"
                android:elevation="3dp"
                app:layout_constraintEnd_toStartOf="@+id/layout_fragment_product_search_multibitamin_standard_item2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_multibitamin_standard_title">

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="6dp"
                    android:text="미정님의 함량"
                    android:textColor="@color/colorPointBlue"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item1_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="7dp"
                    android:text="240"
                    android:textColor="@color/colorBlack"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_standard_item1_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_fragment_product_search_multibitamin_standard_item2"
                android:layout_width="98dp"
                android:layout_height="118dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorWhite"
                android:elevation="3dp"
                app:layout_constraintEnd_toStartOf="@+id/layout_fragment_product_search_multibitamin_standard_item3"
                app:layout_constraintStart_toEndOf="@+id/layout_fragment_product_search_multibitamin_standard_item1"
                app:layout_constraintTop_toTopOf="@+id/layout_fragment_product_search_multibitamin_standard_item1">

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="6dp"
                    android:text="종류"
                    android:textColor="@color/colorPointBlue"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item2_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="7dp"
                    android:text="산화"
                    android:textColor="@color/colorBlack"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_standard_item2_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_fragment_product_search_multibitamin_standard_item3"
                android:layout_width="98dp"
                android:layout_height="118dp"
                android:background="@color/colorWhite"
                android:elevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layout_fragment_product_search_multibitamin_standard_item2"
                app:layout_constraintTop_toTopOf="@+id/layout_fragment_product_search_multibitamin_standard_item2">

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="6dp"
                    android:text="종류"
                    android:textColor="@color/colorPointBlue"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_fragment_product_search_standard_item3_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="7dp"
                    android:text="산화"
                    android:textColor="@color/colorBlack"
                    android:textSize="11dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_standard_item3_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_standard_item1_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="9dp"
                android:text="01."
                android:textColor="@color/colorPointBlue"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_fragment_product_search_multibitamin_standard_item1" />

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_standard_item1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="9dp"
                android:text="수용성 비타민 평균 함량"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/txt_fragment_product_search_multibitamin_standard_item1_number"
                app:layout_constraintTop_toTopOf="@+id/txt_fragment_product_search_multibitamin_standard_item1_number" />

            <ImageView
                android:id="@+id/img_fragment_product_search_multibitamin_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:src="@drawable/img_multivitamin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_multibitamin_standard_item1_title" />

            <TextView
                android:id="@+id/txt_fragment_product_search_multibitamin_item1_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_fragment_product_search_multibitamin_item2"
                android:layout_marginTop="20dp"
                android:textSize="13dp"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="8dp"
                android:text="KG당 5mg 섭취를 권장하며
                \n영양제로서 상한 섭취량은 350mg 입니다.\n(성별, 연령에 따라 유동적으로 표시)"

                />

            <TextView
                android:id="@+id/txt_fragment_product_searhc_multibitamin_item2_title_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="9dp"
                android:text="02."
                android:textColor="@color/colorPointBlue"
                android:textSize="18dp"
                android:layout_marginTop="34dp"
                app:layout_constraintStart_toStartOf="@+id/txt_fragment_product_search_multibitamin_standard_item1_number"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_search_multibitamin_item1_explain" />
            
            <TextView
                android:id="@+id/txt_fragment_product_searhc_multibitamin_item2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/txt_fragment_product_searhc_multibitamin_item2_title_number"
                android:layout_marginLeft="6dp"
                app:layout_constraintTop_toTopOf="@+id/txt_fragment_product_searhc_multibitamin_item2_title_number"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="9dp"
                android:text="지용성 비타민 &amp; 미네랄 평균 함량"
                />

            <ImageView
                android:id="@+id/img_fragment_product_search_multibitamin_stadard_itme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_vitamin_text1"
                app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_searhc_multibitamin_item2_title"
                android:layout_marginTop="18dp"
                />

            <TextView
                android:id="@+id/txt_fragment_product_searhc_multibitamin_item3_title_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/colorPointBlue"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@+id/txt_fragment_product_searhc_multibitamin_item2_title_number"
                app:layout_constraintTop_toBottomOf="@+id/img_fragment_product_search_multibitamin_stadard_itme2"
                android:layout_marginTop="34dp"
                android:lineSpacingExtra="9dp"
                android:text="03."
                />
            <TextView
                android:id="@+id/txt_fragment_product_searhc_multibitamin_item3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/txt_fragment_product_searhc_multibitamin_item3_title_number"
                app:layout_constraintTop_toTopOf="@+id/txt_fragment_product_searhc_multibitamin_item3_title_number"
                android:layout_marginLeft="6dp"
                android:lineSpacingExtra="9dp"
                android:text="영양소 개수"
                />

            <ImageView
                android:id="@+id/img_fragment_product_search_multibitamin_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fragment_product_searhc_multibitamin_item3_title"
                android:layout_marginTop="18dp"
                android:src="@drawable/img_vitamin_text2"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>