<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorVeryLightPink1"
    >

    <TextView
        android:id="@+id/txt_rv_rv_item_home_detail_similar_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15dp"
        android:textColor="@color/colorPointRed"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dp"
        android:text="1"
        />
    <TextView
        android:id="@+id/txt_rv_rv_item_home_detail_similar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="4dp"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_rv_item_home_detail_similar_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/notosanskr_light"
        android:includeFontPadding="false"
        android:text="진세노사이드"
        />


</androidx.constraintlayout.widget.ConstraintLayout>