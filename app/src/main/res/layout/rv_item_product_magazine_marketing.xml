<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sky_fill_4"
    >
    
    <TextView
        android:id="@+id/txt_rv_item_product_magazine_marketing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/yellow_fill_10"
        android:layout_marginRight="12dp"
        android:text="방향성"
        />

    <TextView
        android:id="@+id/txt_rv_item_product_magazine_marketing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="10sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_item_product_magazine_marketing"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_product_magazine_marketing"
        android:layout_marginTop="10dp"
        android:text="천연의 함정 화학 부형제는
정말\n 안 좋은 것일까?"
    />
    
</androidx.constraintlayout.widget.ConstraintLayout>