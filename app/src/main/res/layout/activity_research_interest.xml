<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_research_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".research.ResearchInterestActivity"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/btn_interest_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btn_interest_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_close" />

    <ProgressBar
        android:id="@+id/pb_research_interest"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ResearchProgressbarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_interest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:fontFamily="@font/notosanskr_light"
        android:includeFontPadding="false"
        android:lineSpacingExtra="9sp"
        android:text="관심 분야를 모두 등록해주세요"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_interest_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="여기 수정수정수정해야합니다 그렇습니다"
        android:textColor="@color/colorBlack"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_interest_title" />

    <ScrollView
        android:id="@+id/sv_research_interest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:scrollbarThumbVertical="@color/colorScrollYellow"
        app:layout_constraintBottom_toTopOf="@+id/btn_interest_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_interest_subtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckedTextView
                android:id="@+id/btn_interest_1"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="스트레스 · 피로"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckedTextView
                android:id="@+id/btn_interest_2"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="간건강"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_3"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_1"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_1"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_1" />

            <CheckedTextView
                android:id="@+id/btn_interest_3"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="눈건강"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_4"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_2"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_2"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_2" />

            <CheckedTextView
                android:id="@+id/btn_interest_4"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="면연력"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_5"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_3"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_3"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_3" />

            <CheckedTextView
                android:id="@+id/btn_interest_5"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="혈행개선"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_6"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_4"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_4"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_4" />

            <CheckedTextView
                android:id="@+id/btn_interest_6"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="다이어트"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_7"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_5"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_5"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_5" />

            <CheckedTextView
                android:id="@+id/btn_interest_7"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="소화기능"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_8"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_6"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_6"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_6" />

            <CheckedTextView
                android:id="@+id/btn_interest_8"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="뼈 · 관절"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_9"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_7"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_7"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_7" />

            <CheckedTextView
                android:id="@+id/btn_interest_9"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="두뇌"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_10"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_8"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_8"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_8" />

            <CheckedTextView
                android:id="@+id/btn_interest_10"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="피부 · 모발"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_interest_11"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_9"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_9"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_9" />

            <CheckedTextView
                android:id="@+id/btn_interest_11"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_research_userinfo"
                android:checked="false"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6sp"
                android:text="활력 · 성기능"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_interest_10"
                app:layout_constraintStart_toStartOf="@+id/btn_interest_10"
                app:layout_constraintTop_toBottomOf="@+id/btn_interest_10" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_interest_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/selector_research_next"
        android:enabled="false"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="완료하기"
        android:textColor="@color/colorDarkGray"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>