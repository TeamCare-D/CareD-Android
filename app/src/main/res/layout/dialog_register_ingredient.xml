<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/btn_ingredient_cancel"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:fontFamily="@font/notosanskr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:text="취소"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_ingredient_confirm"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:fontFamily="@font/notosanskr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:text="완료"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.super_rabbit.wheel_picker.WheelPicker
        android:id="@+id/np_ingredient_unit"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectedTextColor="@color/colorPointBlue"
        app:textSize="16dp"
        app:wheelItemCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>