<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/rv_item_product_search_standard_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorPointBlue"
        android:lineSpacingExtra="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="18dp"
        android:text="산화마그네슘"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_product_search_standard_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="8dp"
        android:text="KG당 5mg 섭취를 권장하며\n
영양제로서 상한 섭취량은 350mg 입니다.\n
(성별, 연령에 따라 유동적으로 표시)"
        />
</androidx.constraintlayout.widget.ConstraintLayout>