<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_rv_item_home_care_detail_similar_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_rv_item_home_care_detail_similar_title_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="1"
            android:textColor="@color/colorPointRed"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_rv_item_home_care_detail_similar_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:text="간 건강"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_rv_item_home_care_detail_similar_title_number"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_rv_item_home_care_detail_similar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/btn_dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/line_rv_item_home_care_detail_similar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_rv_item_home_care_detail_similar_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        />
    <TextView
        android:id="@+id/txt_rv_item_home_care_detail_similar_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/colorCoolGray2"
        android:lineSpacingExtra="6dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@+id/line_rv_item_home_care_detail_similar"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:text="간 건강을 케어하는 사람이 가장 많이 섭취하는 성분이에요."
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rv_item_hoem_care_detail_similar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_home_care_detail_similar_sub_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>