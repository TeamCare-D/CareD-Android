<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/txt_rv_item_fragment_product_list_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorPointBlue"
        android:lineSpacingExtra="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:layout_marginLeft="25dp"
        android:text="비타민D"
        />
    <TextView
        android:id="@+id/txt_rv_item_fragment_product_list_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_item_fragment_product_list_detail_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_fragment_product_list_detail_title"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="8dp"
        android:text="KG당 5mg 섭취를 권장하며\n
영양제로서 상한 섭취량은 350mg 입니다.\n
(성별, 연령에 따라 유동적으로 표시)"
        />

</androidx.constraintlayout.widget.ConstraintLayout>