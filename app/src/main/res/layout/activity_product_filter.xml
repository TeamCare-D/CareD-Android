<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_product_filter_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_close"
        app:layout_constraintEnd_toStartOf="@+id/img_product_filter_close"
        app:layout_constraintTop_toTopOf="@+id/img_product_filter_close" />

    <ImageView
        android:id="@+id/img_product_filter_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_product_filter_title"
        style="@style/bold20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="필터"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_product_filter_refresh" />

    <ScrollView
        android:id="@+id/scroll_product_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_product_filter_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="8dp"
                android:text="정렬"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_product_filter_priority_korea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6dp"
                android:text="가나다 순"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_sort" />

            <TextView
                android:id="@+id/txt_product_filter_priority_high_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6dp"
                android:text="높은 가격 순"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_priority_korea" />


            <TextView
                android:id="@+id/txt_product_filter_priority_low_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6dp"
                android:text="낮은 가격 순"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_priority_high_price" />


            <TextView
                android:id="@+id/txt_product_filter_priority_low_price_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6dp"
                android:text="낮은 30일 유지 가격 순"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_priority_low_price" />

            <TextView
                android:id="@+id/txt_product_filter_priority_high_price_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="6dp"
                android:text="높은 가격 순"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_priority_low_price_30" />

            <ImageView
                android:id="@+id/img_product_filter_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_line"
                android:layout_marginTop="38dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_priority_high_price_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txt_product_filter_maintain_price_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_product_filter_line"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="8dp"
                android:layout_marginTop="38dp"
                android:text="30일 유지 가격"
                />

            <TextView
                android:id="@+id/txt_product_filter_minimum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorPointBlue"
                android:lineSpacingExtra="6dp"
                android:text="10,000"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_maintain_price_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_product_filter_price_bar"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/txt_product_filter_price_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="-"


                app:layout_constraintEnd_toStartOf="@+id/txt_product_filter_maximum"
                android:textColor="@color/colorPointBlue"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/txt_product_filter_minimum"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/txt_product_filter_minimum" />

            <TextView
                android:id="@+id/txt_product_filter_maximum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorPointBlue"
                android:lineSpacingExtra="6dp"
                android:text="10,000"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="@+id/txt_product_filter_minimum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_product_filter_price_bar"

                />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/seekbar_product_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_filter_maximum"
                app:layout_constraintEnd_toEndOf="parent"
                />
            

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>