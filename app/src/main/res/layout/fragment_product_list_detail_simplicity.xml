<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="60dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_list_detail_simplicity_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDuckEggBlue"
        >

    <TextView
        android:id="@+id/txt_product_list_detail_simplicity_item3_top_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:lineSpacingExtra="-2dp"
        android:text="비타민B 컴플렉스"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:textColor="@color/colorPointBlue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_product_list_detail_simplicity_item3_top_component_dump"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/txt_product_list_detail_simplicity_item3_top_component_dump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="-2dp"
        android:text="를 고르셨네요?"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_product_list_detail_simplicity_item3_top_component"
        app:layout_constraintTop_toTopOf="@+id/txt_product_list_detail_simplicity_item3_top_component" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_list_detail_simplicity_item3_1"
        android:layout_width="98dp"
        android:layout_height="118dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_list_detail_simplicity_item3_top_component"
        android:layout_marginRight="8dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/layout_product_list_detail_simplicity_item3_2">

        <TextView
            android:id="@+id/txt_product_list_detail_simplicity_item3_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:lineSpacingExtra="6dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="미정님의 함량"
            android:textColor="@color/colorPointBlue"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_list_detail_simplicity_item3_1_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_list_detail_simplicity_item3_1_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_list_detail_simplicity_item3_2"
        android:layout_width="98dp"
        android:layout_height="118dp"
        app:layout_constraintStart_toEndOf="@+id/layout_product_list_detail_simplicity_item3_1"
        app:layout_constraintTop_toTopOf="@+id/layout_product_list_detail_simplicity_item3_1"
        app:layout_constraintEnd_toStartOf="@+id/layout_product_list_detail_simplicity_item3_3"
        android:background="@color/colorWhite"
        android:layout_marginRight="8dp"
        >

        <TextView
            android:id="@+id/txt_product_list_detail_simplicity_item3_2_title"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6dp"
            android:text="종류"
            android:textColor="@color/colorPointBlue"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_list_detail_simplicity_item3_2_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_list_detail_simplicity_item3_2_title"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_list_detail_simplicity_item3_3"
        android:layout_width="98dp"
        android:layout_height="118dp"
        app:layout_constraintStart_toEndOf="@+id/layout_product_list_detail_simplicity_item3_2"
        app:layout_constraintTop_toTopOf="@+id/layout_product_list_detail_simplicity_item3_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorWhite"
        >

        <TextView
            android:id="@+id/txt_product_list_detail_simplicity_item3_3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorPointBlue"
            android:lineSpacingExtra="6dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:text="기준 3"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/txt_product_list_detail_simplicity_item3_3_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_list_detail_simplicity_item3_3_title"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/img_product_list_detail_simplicity_filter"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_product_list_detail_simplicity_item3_1"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/layout_product_list_detail_simplicity_item3_1"
        android:src="@drawable/btn_filter_off"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>