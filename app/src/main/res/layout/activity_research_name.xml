<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".research.ResearchNicknameActivity"
    android:id="@+id/cl_research_nick">

    <ImageView
        android:id="@+id/btn_nick_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_close" />

    <TextView
        android:id="@+id/txt_nick_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="65dp"
        android:text="사용할 닉네임을 적어주세요"
        android:textSize="20sp"
        android:fontFamily="@font/notosanskr_light"
        android:textColor="@color/colorBlack"
        android:lineSpacingExtra="9sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="5"
        android:inputType="textPersonName"
        android:hint="닉네임"
        android:textColorHint="@color/colorFontGray"
        android:textSize="38sp"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/colorPointBlue"
        android:textSelectHandle="@color/colorPointBlue"
        android:includeFontPadding="false"
        android:background="@null"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nick_title" />

    <Button
        android:id="@+id/btn_nick_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="163dp"
        android:background="@drawable/selector_research_next"
        android:enabled="false"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="다음으로 넘어가기"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nick" />
</androidx.constraintlayout.widget.ConstraintLayout>