<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_mypage_interest_product"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_product_1" />

    <ImageView
        android:id="@+id/btn_mypage_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mypage_interest_product"
        android:button="@color/colorTransparentWhite"
        app:layout_constraintEnd_toEndOf="@+id/img_mypage_interest_product"
        app:layout_constraintTop_toTopOf="@+id/img_mypage_interest_product" />

    <TextView
        android:id="@+id/txt_mypage_interest_brand"
        style="@style/light12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="더리얼"
        app:layout_constraintEnd_toStartOf="@+id/txt_mypage_interest_overseas"
        app:layout_constraintStart_toStartOf="@+id/img_mypage_interest_product"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage_interest_product" />

    <TextView
        android:id="@+id/txt_mypage_interest_overseas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5sp"
        android:text="해외직구"
        android:textColor="@color/colorGrayishBrown2"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/img_mypage_interest_product"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage_interest_product" />

    <TextView
        android:id="@+id/txt_mypage_interest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8sp"
        android:text="알티지 오메가 3 맥스 1400"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txt_mypage_interest_brand"
        app:layout_constraintTop_toBottomOf="@+id/txt_mypage_interest_brand" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="유지일 : "
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_mypage_interest_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_mypage_interest_name" />

    <TextView
        android:id="@+id/txt_mypage_interest_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="40"
        android:textColor="@color/colorMango"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView37"
        app:layout_constraintStart_toEndOf="@+id/textView37"
        app:layout_constraintTop_toTopOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="일"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_mypage_interest_day"
        app:layout_constraintStart_toEndOf="@+id/txt_mypage_interest_day"
        app:layout_constraintTop_toTopOf="@+id/txt_mypage_interest_day" />
</androidx.constraintlayout.widget.ConstraintLayout>