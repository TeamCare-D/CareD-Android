<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="96dp"
    android:layout_height="115dp"
    android:layout_marginEnd="8dp"
    android:background="@color/colorPointGray"
    app:layout_constraintDimensionRatio="1">

    <ImageView
        android:id="@+id/img_rv_item_care"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorPointBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_rv_item_care_name"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="피로회복"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/img_rv_item_care"
        app:layout_constraintTop_toBottomOf="@+id/img_rv_item_care" />
</androidx.constraintlayout.widget.ConstraintLayout>