<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPointGray">


    <TextView
        android:id="@+id/txt_rv_item_magazine_direction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_border_square"
        android:textSize="10dp"
        android:textColor="@color/colorWhite"
        android:text="방향성"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txt_rv_item_magazine_direction"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_item_magazine_direction_label"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_magazine_direction_label"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="10dp"
        android:text="천연의 함정 화학 부형제는\n 정말 안 좋은 것일까?"
        />



</androidx.constraintlayout.widget.ConstraintLayout>