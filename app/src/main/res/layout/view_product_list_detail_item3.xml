<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_product_list_detail_item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_product_list_detail_item2"
        android:layout_width="98dp"
        android:layout_height="118dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="8dp"
        android:src="@color/dodger_blue"/>
    <ImageView
        android:id="@+id/img_product_list_detail_item2"
        app:layout_constraintStart_toEndOf="@+id/img_product_list_detail_item1"
        app:layout_constraintTop_toTopOf="@+id/img_product_list_detail_item1"
        app:layout_constraintEnd_toStartOf="@+id/img_product_list_detail_item3"
        android:layout_width="98dp"
        android:layout_height="118dp"
        android:layout_marginEnd="8dp"
        android:src="@color/dodger_blue"/>
    <ImageView
        android:id="@+id/img_product_list_detail_item3"
        app:layout_constraintStart_toEndOf="@+id/img_product_list_detail_item2"
        app:layout_constraintTop_toTopOf="@+id/img_product_list_detail_item2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="98dp"
        android:layout_height="118dp"
        android:src="@color/dodger_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>