<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_popup_tilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="등록된 제품을 삭제하시겠습니까?"
        android:textColor="@color/colorBlack"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_popup_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_popup_confirm"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorBlack"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="확인"
        android:textColor="@color/colorWhite"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_popup_cancel"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_popup_cancel" />

    <Button
        android:id="@+id/btn_popup_cancel"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="43dp"
        android:background="@color/colorBlack"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="취소"
        android:textColor="@color/colorWhite"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_popup_confirm"
        app:layout_constraintTop_toBottomOf="@+id/txt_popup_tilte" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_popup_cancel"
        app:layout_constraintEnd_toEndOf="@+id/btn_popup_confirm"
        app:layout_constraintStart_toEndOf="@+id/btn_popup_confirm"
        app:layout_constraintTop_toTopOf="@+id/btn_popup_cancel"
        app:srcCompat="@color/colorCoolGray2" />


</androidx.constraintlayout.widget.ConstraintLayout>